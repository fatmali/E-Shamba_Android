<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_create_category"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.fatmalii.talk.CreateCategory">


    <android.support.v7.widget.Toolbar
        android:id="@+id/comfort_tb"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        android:title="@string/createCategory"
        app:title="@string/createCategory"
        app:titleTextColor="@android:color/background_light"
        app:headerLayout="@layout/navbar_header"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/create_cat_title"
        style="@style/Widget.AppCompat.Light.AutoCompleteTextView"
        android:hint="Enter new category name"
        android:layout_gravity="center"
        android:layout_marginTop="30dp" />

    <Button
        android:text="Create"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/create_cat_btn"
        android:layout_gravity="center"
        style="@style/Widget.AppCompat.Button.Colored" />


</LinearLayout>
